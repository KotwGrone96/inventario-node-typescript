<h1>Nuevo producto</h1>
<div
	class='flex flex-col bg-white border border-gray-200 rounded-lg shadow md:flex-row justify-start mt-4 gap-4'
	id='addProductContainer'
>
	<div
		class='w-full flex justify-center items-center rounded-t-lg min-h-[300px] md:w-48 md:rounded-none md:rounded-s-lg border cursor-pointer hover:bg-gray-50'
	>
		<h4 class='text-center'>Subir imagen</h4>
	</div>
	<form id='addProductForm' class='w-full py-4 md:max-w-[500px] px-4 md:px-0 flex flex-col gap-4'>
		<div class='relative'>
			<input
				type='text'
				id='name'
				name='name'
				class='block bg-gray-50 px-2.5 pb-2.5 pt-4 w-full text-sm text-gray-900 rounded-lg border-1 border-gray-300 appearance-none dark:text-white dark:border-gray-600 dark:focus:border-blue-500 focus:outline-none focus:ring-0 focus:border-blue-600 peer'
				placeholder=' '
				autocomplete='off'
			/>
			<label
				for='name'
				class='absolute text-sm text-gray-500 dark:text-gray-400 duration-300 transform -translate-y-4 scale-75 top-2 z-10 origin-[0] bg-gray-50 dark:bg-gray-900 px-2 peer-focus:px-2 peer-focus:text-blue-600 peer-focus:dark:text-blue-500 peer-placeholder-shown:scale-100 peer-placeholder-shown:-translate-y-1/2 peer-placeholder-shown:top-1/2 peer-focus:top-2 peer-focus:scale-75 peer-focus:-translate-y-4 rtl:peer-focus:translate-x-1/4 rtl:peer-focus:left-auto start-1'
			><span class="after:content-['*'] after:text-red-500">Nombre</span></label>
		</div>
		<div class='relative'>
			<textarea
				id='description'
				name='description'
				class='block bg-gray-50 px-2.5 pb-2.5 pt-4 w-full text-sm text-gray-900 rounded-lg border-1 border-gray-300 appearance-none dark:text-white dark:border-gray-600 dark:focus:border-blue-500 focus:outline-none focus:ring-0 focus:border-blue-600 peer resize-none'
				placeholder=' '
			></textarea>
			<label
				for='description'
				class='absolute text-sm text-gray-500 dark:text-gray-400 duration-300 transform -translate-y-4 scale-75 top-2 z-10 origin-[0] bg-gray-50 dark:bg-gray-900 px-2 peer-focus:px-2 peer-focus:text-blue-600 peer-focus:dark:text-blue-500 peer-placeholder-shown:scale-100 peer-placeholder-shown:-translate-y-1/2 peer-placeholder-shown:top-1/2 peer-focus:top-2 peer-focus:scale-75 peer-focus:-translate-y-4 rtl:peer-focus:translate-x-1/4 rtl:peer-focus:left-auto start-1'
			>Descripción</label>
		</div>

		<div class='flex justify-start items-center gap-4'>
			<div class='w-full'>
				<button
					id='dropdownSearchButtonProvider'
					data-dropdown-toggle='dropdownSearchProvider'
					class='w-full inline-flex items-center px-4 py-2 text-sm font-medium text-center text-white bg-blue-600 rounded-lg hover:bg-blue-700 focus:ring-4 focus:outline-none focus:ring-blue-300 dark:bg-blue-600 dark:hover:bg-blue-700 dark:focus:ring-blue-800'
					type='button'
				>Proveedores
					<svg
						class='w-2.5 h-2.5 ms-2.5'
						aria-hidden='true'
						xmlns='http://www.w3.org/2000/svg'
						fill='none'
						viewBox='0 0 10 6'
					>
						<path
							stroke='currentColor'
							stroke-linecap='round'
							stroke-linejoin='round'
							stroke-width='2'
							d='m1 1 4 4 4-4'
						/>
					</svg></button>

				<!-- Dropdown menu -->
				<div
					id='dropdownSearchProvider'
					class='z-50 hidden bg-white rounded-lg shadow w-60 dark:bg-gray-700'
				>
					<div class='p-3'>
						<label for='input-group-search-provider' class='sr-only'>Search</label>
						<div class='relative'>
							<div class='absolute inset-y-0 start-0 flex items-center ps-3 pointer-events-none'>
								<svg
									class='w-4 h-4 text-gray-500 dark:text-gray-400'
									aria-hidden='true'
									xmlns='http://www.w3.org/2000/svg'
									fill='none'
									viewBox='0 0 20 20'
								>
									<path
										stroke='currentColor'
										stroke-linecap='round'
										stroke-linejoin='round'
										stroke-width='2'
										d='m19 19-4-4m0-7A7 7 0 1 1 1 8a7 7 0 0 1 14 0Z'
									/>
								</svg>
							</div>
							<input
								type='text'
								id='input-group-search-provider'
								class='bg-gray-50 border border-gray-300 text-gray-900 text-sm rounded-lg focus:ring-blue-500 focus:border-blue-500 block w-full ps-10 p-2.5 dark:bg-gray-600 dark:border-gray-500 dark:placeholder-gray-400 dark:text-white dark:focus:ring-blue-500 dark:focus:border-blue-500'
								placeholder='Buscar proveedor'
							/>
						</div>
					</div>
					<ul
						class='h-48 px-3 pb-3 overflow-y-auto text-sm text-gray-700 dark:text-gray-200'
						aria-labelledby='dropdownSearchButtonProvider'
						id='dropDownProviderList'
					>
					</ul>
				</div>
			</div>
			<div class='w-full'>
				<button
					id='dropdownSearchButtonCategory'
					data-dropdown-toggle='dropdownSearchCategory'
					class='w-full inline-flex items-center px-4 py-2 text-sm font-medium text-center text-white bg-blue-600 rounded-lg hover:bg-blue-700 focus:ring-4 focus:outline-none focus:ring-blue-300 dark:bg-blue-600 dark:hover:bg-blue-700 dark:focus:ring-blue-800'
					type='button'
				>Categorías
					<svg
						class='w-2.5 h-2.5 ms-2.5'
						aria-hidden='true'
						xmlns='http://www.w3.org/2000/svg'
						fill='none'
						viewBox='0 0 10 6'
					>
						<path
							stroke='currentColor'
							stroke-linecap='round'
							stroke-linejoin='round'
							stroke-width='2'
							d='m1 1 4 4 4-4'
						/>
					</svg></button>

				<!-- Dropdown menu -->
				<div
					id='dropdownSearchCategory'
					class='z-50 hidden bg-white rounded-lg shadow w-60 dark:bg-gray-700'
				>
					<div class='p-3'>
						<label for='input-group-search' class='sr-only'>Search</label>
						<div class='relative'>
							<div class='absolute inset-y-0 start-0 flex items-center ps-3 pointer-events-none'>
								<svg
									class='w-4 h-4 text-gray-500 dark:text-gray-400'
									aria-hidden='true'
									xmlns='http://www.w3.org/2000/svg'
									fill='none'
									viewBox='0 0 20 20'
								>
									<path
										stroke='currentColor'
										stroke-linecap='round'
										stroke-linejoin='round'
										stroke-width='2'
										d='m19 19-4-4m0-7A7 7 0 1 1 1 8a7 7 0 0 1 14 0Z'
									/>
								</svg>
							</div>
							<input
								type='text'
								id='input-group-search-category'
								class='bg-gray-50 border border-gray-300 text-gray-900 text-sm rounded-lg focus:ring-blue-500 focus:border-blue-500 block w-full ps-10 p-2.5 dark:bg-gray-600 dark:border-gray-500 dark:placeholder-gray-400 dark:text-white dark:focus:ring-blue-500 dark:focus:border-blue-500'
								placeholder='Buscar categoría'
							/>
						</div>
					</div>
					<ul
						class='h-48 px-3 pb-3 overflow-y-auto text-sm text-gray-700 dark:text-gray-200'
						aria-labelledby='dropdownSearchButtonProvider'
						id='dropDownCategoryList'
					>
					</ul>
				</div>
			</div>

		</div>
		<div class='flex justify-start items-center gap-4'>
			<div class='relative w-full'>
				<input
					type='text'
					id='sku'
					name='sku'
					class='block bg-gray-50 px-2.5 pb-2.5 pt-4 w-full text-sm text-gray-900 rounded-lg border-1 border-gray-300 appearance-none dark:text-white dark:border-gray-600 dark:focus:border-blue-500 focus:outline-none focus:ring-0 focus:border-blue-600 peer'
					placeholder=' '
					autocomplete='off'
				/>
				<label
					for='sku'
					class='absolute text-sm text-gray-500 dark:text-gray-400 duration-300 transform -translate-y-4 scale-75 top-2 z-10 origin-[0] bg-gray-50 dark:bg-gray-900 px-2 peer-focus:px-2 peer-focus:text-blue-600 peer-focus:dark:text-blue-500 peer-placeholder-shown:scale-100 peer-placeholder-shown:-translate-y-1/2 peer-placeholder-shown:top-1/2 peer-focus:top-2 peer-focus:scale-75 peer-focus:-translate-y-4 rtl:peer-focus:translate-x-1/4 rtl:peer-focus:left-auto start-1'
				><span class="after:content-['*'] after:text-red-500">SKU</span></label>
			</div>
			<div class='relative w-full'>
				<input
					type='text'
					id='product_code'
					name='product_code'
					class='block bg-gray-50 px-2.5 pb-2.5 pt-4 w-full text-sm text-gray-900 rounded-lg border-1 border-gray-300 appearance-none dark:text-white dark:border-gray-600 dark:focus:border-blue-500 focus:outline-none focus:ring-0 focus:border-blue-600 peer'
					placeholder=' '
					autocomplete='off'
				/>
				<label
					for='product_code'
					class='absolute text-sm text-gray-500 dark:text-gray-400 duration-300 transform -translate-y-4 scale-75 top-2 z-10 origin-[0] bg-gray-50 dark:bg-gray-900 px-2 peer-focus:px-2 peer-focus:text-blue-600 peer-focus:dark:text-blue-500 peer-placeholder-shown:scale-100 peer-placeholder-shown:-translate-y-1/2 peer-placeholder-shown:top-1/2 peer-focus:top-2 peer-focus:scale-75 peer-focus:-translate-y-4 rtl:peer-focus:translate-x-1/4 rtl:peer-focus:left-auto start-1'
				><span class="after:content-['*'] after:text-red-500">Código</span></label>
			</div>
		</div>
		<div class='flex justify-start items-center gap-4'>
			<div class='relative w-full'>
				<input
					type='number'
					min='1'
					id='unit_price'
					name='unit_price'
					class='block bg-gray-50 px-2.5 pb-2.5 pt-4 w-full text-sm text-gray-900 rounded-lg border-1 border-gray-300 appearance-none dark:text-white dark:border-gray-600 dark:focus:border-blue-500 focus:outline-none focus:ring-0 focus:border-blue-600 peer'
					placeholder=' '
				/>
				<span class='absolute top-3 right-8 text-green-700 font-medium text-lg'>$</span>
				<label
					for='unit_price'
					class='absolute text-sm text-gray-500 dark:text-gray-400 duration-300 transform -translate-y-4 scale-75 top-2 z-10 origin-[0] bg-gray-50 dark:bg-gray-900 px-2 peer-focus:px-2 peer-focus:text-blue-600 peer-focus:dark:text-blue-500 peer-placeholder-shown:scale-100 peer-placeholder-shown:-translate-y-1/2 peer-placeholder-shown:top-1/2 peer-focus:top-2 peer-focus:scale-75 peer-focus:-translate-y-4 rtl:peer-focus:translate-x-1/4 rtl:peer-focus:left-auto start-1'
				><span class="after:content-['*'] after:text-red-500">Precio unidad</span></label>
			</div>
			<div class='relative w-full'>
				<input
					type='number'
					min='1'
					value='30'
					id='profit'
					name='profit'
					class='block bg-gray-50 px-2.5 pb-2.5 pt-4 w-full text-sm text-gray-900 rounded-lg border-1 border-gray-300 appearance-none dark:text-white dark:border-gray-600 dark:focus:border-blue-500 focus:outline-none focus:ring-0 focus:border-blue-600 peer before:first-letter:text-green-500'
					placeholder=' '
					autocomplete='off'
				/>
				<span class='absolute top-3 right-8 text-blue-700 font-medium text-lg'>%</span>
				<label
					for='profit'
					class='absolute text-sm text-gray-500 dark:text-gray-400 duration-300 transform -translate-y-4 scale-75 top-2 z-10 origin-[0] bg-gray-50 dark:bg-gray-900 px-2 peer-focus:px-2 peer-focus:text-blue-600 peer-focus:dark:text-blue-500 peer-placeholder-shown:scale-100 peer-placeholder-shown:-translate-y-1/2 peer-placeholder-shown:top-1/2 peer-focus:top-2 peer-focus:scale-75 peer-focus:-translate-y-4 rtl:peer-focus:translate-x-1/4 rtl:peer-focus:left-auto start-1'
				><span class="after:content-['*'] after:text-red-500">Procentaje de ganancia</span></label>
			</div>
		</div>
		<div class='relative w-full'>
			<input
				type='number'
				min='1'
				id='public_price'
				name='public_price'
				class='block bg-gray-50 px-2.5 pb-2.5 pt-4 w-full text-sm text-gray-900 rounded-lg border-1 border-gray-300 appearance-none dark:text-white dark:border-gray-600 dark:focus:border-blue-500 focus:outline-none focus:ring-0 focus:border-blue-600 peer'
				placeholder=' '
				autocomplete='off'
			/>
			<span class='absolute top-3 right-8 text-green-700 font-medium text-lg'>$</span>
			<label
				for='public_price'
				class='absolute text-sm text-gray-500 dark:text-gray-400 duration-300 transform -translate-y-4 scale-75 top-2 z-10 origin-[0] bg-gray-50 dark:bg-gray-900 px-2 peer-focus:px-2 peer-focus:text-blue-600 peer-focus:dark:text-blue-500 peer-placeholder-shown:scale-100 peer-placeholder-shown:-translate-y-1/2 peer-placeholder-shown:top-1/2 peer-focus:top-2 peer-focus:scale-75 peer-focus:-translate-y-4 rtl:peer-focus:translate-x-1/4 rtl:peer-focus:left-auto start-1'
			><span class="after:content-['*'] after:text-red-500">Precio público</span></label>
		</div>
		<div class='relative w-full'>
			<input
				type='number'
				min='1'
				id='earning'
				name='earning'
				class='block bg-gray-200 px-2.5 pb-2.5 pt-4 w-full text-sm text-gray-900 rounded-lg border-1 border-gray-300 appearance-none dark:text-white dark:border-gray-600 dark:focus:border-blue-500 focus:outline-none focus:ring-0 focus:border-blue-600 peer'
				placeholder=' '
				autocomplete='off'
				disabled
			/>
			<span class='absolute top-3 right-8 text-green-700 font-medium text-lg'>$</span>
			<label
				for='earning'
				class='absolute text-sm text-gray-500 dark:text-gray-400 duration-300 transform -translate-y-4 scale-75 top-2 z-10 origin-[0] bg-gray-200 dark:bg-gray-900 px-2 peer-focus:px-2 peer-focus:text-blue-600 peer-focus:dark:text-blue-500 peer-placeholder-shown:scale-100 peer-placeholder-shown:-translate-y-1/2 peer-placeholder-shown:top-1/2 peer-focus:top-2 peer-focus:scale-75 peer-focus:-translate-y-4 rtl:peer-focus:translate-x-1/4 rtl:peer-focus:left-auto start-1'
			>Ganancia x Unid.</label>
		</div>
		<div class='relative w-full'>
			<input
				type='number'
				min='1'
				id='quantity'
				name='quantity'
				class='block bg-gray-50 px-2.5 pb-2.5 pt-4 w-full text-sm text-gray-900 rounded-lg border-1 border-gray-300 appearance-none dark:text-white dark:border-gray-600 dark:focus:border-blue-500 focus:outline-none focus:ring-0 focus:border-blue-600 peer'
				placeholder=' '
				autocomplete='off'
			/>
			<label
				for='quantity'
				class='absolute text-sm text-gray-500 dark:text-gray-400 duration-300 transform -translate-y-4 scale-75 top-2 z-10 origin-[0] bg-gray-50 dark:bg-gray-900 px-2 peer-focus:px-2 peer-focus:text-blue-600 peer-focus:dark:text-blue-500 peer-placeholder-shown:scale-100 peer-placeholder-shown:-translate-y-1/2 peer-placeholder-shown:top-1/2 peer-focus:top-2 peer-focus:scale-75 peer-focus:-translate-y-4 rtl:peer-focus:translate-x-1/4 rtl:peer-focus:left-auto start-1'
			><span class="after:content-['*'] after:text-red-500">Cantidad</span></label>
		</div>
		<button
			type='submit'
			class='focus:outline-none text-white bg-green-500 hover:bg-green-600 focus:ring-4 focus:ring-green-300 font-medium rounded-lg text-sm px-5 py-2.5 me-2 mb-2 dark:bg-green-600 dark:hover:bg-green-700 dark:focus:ring-green-800'
		>Crear</button>
	</form>
</div>

<script type='module' src='/js/addProductUI.js'></script>
<div class='login-container'>
	<section class='login-main-content'>
		<h1>Ingresar</h1>
		<form data-type='login' id='form_login' action='' method='POST'>
			<div class='input-group'>
				<label for='username'>Usuario</label>
				<input required type='text' id='username' name='username' />
			</div>
			<div class='input-group'>
				<label for='password'>Contraseña</label>
				<input required type='password' id='password' name='password' />
			</div>
			<button type='submit'>Ingresar</button>
			<p class='change_auth_form' id='register_button'>Registrarse</p>
		</form>
	</section>

	<section class='register-main-content' style='display: none;'>
		<h1>Registrarse</h1>
		<form data-type='register' id='form_register' action='' method='POST'>
			<div class='input-group'>
				<label for='name'>Nombre*</label>
				<input required type='text' id='name' name='name' />
			</div>
			<div class='input-group'>
				<label for='lastname'>Apellido*</label>
				<input required type='text' id='lastname' name='lastname' />
			</div>
			<div class='input-group'>
				<label for='register_username'>Usuario*</label>
				<input required type='text' id='register_username' name='register_username' />
			</div>
			<div class='input-group'>
				<label for='email'>E-mail*</label>
				<input required type='email' id='email' name='email' />
			</div>
			<div class='input-group'>
				<label for='id_num'>DNI*</label>
				<input required type='text' id='id_num' name='id_num' />
			</div>
			<div class='input-group'>
				<label for='phone'>Teléfono</label>
				<input type='tel' id='phone' name='phone' />
			</div>
			<div class='input-group'>
				<label for='register_password'>Contraseña*</label>
				<input required type='password' id='register_password' name='register_password' />
			</div>
			<div class='input-group'>
				<label for='repeat_pass'>Repetir Contraseña*</label>
				<input required type='password' id='repeat_pass' name='repeat_pass' />
			</div>
			<button type='submit'>Registrarse</button>
			<p class='change_auth_form' id='login_button'>Iniciar sesión</p>
		</form>
	</section>
</div>